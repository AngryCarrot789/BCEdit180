<UserControl x:Class="BCEdit180.Controls.FieldInfoControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BCEdit180.Controls"
             mc:Ignorable="d" 
             xmlns:viewmodels="clr-namespace:BCEdit180.ViewModels" xmlns:converters="clr-namespace:BCEdit180.Converters"
             d:DataContext="{d:DesignInstance Type=viewmodels:FieldInfoViewModel}"
             d:DesignHeight="50" d:DesignWidth="250">
    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="VisibilityConverter"/>
    </UserControl.Resources>
    <StackPanel>
        <local:DoubleClickEditBox Text="{Binding FieldName, UpdateSourceTrigger=PropertyChanged}" FontSize="14" FontFamily="Consolas"/>
        <Label Visibility="{Binding IsDeprecated, Converter={StaticResource VisibilityConverter}}" HorizontalContentAlignment="Center" Content="Deprecated" FontStyle="Italic" Background="#7FDE0707" Padding="0 2" Foreground="#FFE0E0E0"/>
    </StackPanel>
</UserControl>
