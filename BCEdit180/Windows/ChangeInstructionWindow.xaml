<windows:WindowModal x:Class="BCEdit180.Windows.ChangeInstructionWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:converters="clr-namespace:BCEdit180.Converters"
             xmlns:instructionEdit="clr-namespace:BCEdit180.Core.CodeEditing.InstructionEdit;assembly=BCEdit180.Core"
             xmlns:windows="clr-namespace:BCEdit180.Windows"
             d:DataContext="{d:DesignInstance Type=instructionEdit:ChangeInstructionViewModel}"
             mc:Ignorable="d"
             Title="Replace Opcode" Height="350" Width="450"
             Style="{DynamicResource CustomWindowBaseStyle}" Background="{DynamicResource AREghZyBrush.Deep.3.Background.Static}">
    <Grid Margin="10">
        <TextBlock Text="Select a new instruction" Padding="10" Margin="0,0,0,0" VerticalAlignment="Top"/>
        <ListBox ItemsSource="{Binding AvailableOpCodes}" 
                 SelectedItem="{Binding SelectedOpcode, UpdateSourceTrigger=PropertyChanged}" 
                 SelectedIndex="{Binding SelectedIndex, UpdateSourceTrigger=PropertyChanged}" 
                 FontFamily="Consolas" FontSize="16"
                 Margin="0,36,0,0" Background="{DynamicResource AREghZyBrush.Deep.2.Background.Static}" 
                 HorizontalAlignment="Left" Width="170"
                 x:Name="InstructionListBox" />
        <Grid Margin="175,36,0,34">
            <Grid.Resources>
                <converters:OpCodeToDescriptionConverter x:Key="DescriptionConverter"/>
            </Grid.Resources>
            <TextBlock Text="{Binding ElementName=InstructionListBox, Path=SelectedItem, Converter={StaticResource DescriptionConverter}, FallbackValue=No description}" Padding="2" FontStyle="Italic" FontSize="14" TextWrapping="Wrap"/>
        </Grid>
        <Grid Height="29" VerticalAlignment="Bottom" Margin="175,0,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="86*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="81*"/>
            </Grid.ColumnDefinitions>
            <Button Command="{Binding ConfirmCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type windows:WindowModal}}}" Focusable="False"  Content="Okay" Background="#FF79D43A"/>
            <Button Command="{Binding CancelCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type windows:WindowModal}}}" Focusable="False" Content="Cancel" Grid.Column="2"/>

        </Grid>
    </Grid>
</windows:WindowModal>
