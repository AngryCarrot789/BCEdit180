<UserControl x:Class="BCEdit180.Annotations.AnnotationItemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BCEdit180.Annotations"
             mc:Ignorable="d" 
             xmlns:viewmodels="clr-namespace:BCEdit180.ViewModels"
             xmlns:annotations="clr-namespace:BCEdit180.Annotations" 
             xmlns:controls="clr-namespace:BCEdit180.Controls"
             d:DataContext="{d:DesignInstance Type=annotations:AnnotationViewModel}"
             d:DesignHeight="80" d:DesignWidth="400">
    <Grid>
        <controls:DoubleClickEditBox Text="{Binding TypeName, UpdateSourceTrigger=PropertyChanged}" FontSize="14" FontFamily="Consolas" Margin="0,0,0,52"/>
        <TextBlock Text="{Binding EntryCount, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0} entries}" Margin="0,28,0,0" Padding="5"/>
    </Grid>
</UserControl>
