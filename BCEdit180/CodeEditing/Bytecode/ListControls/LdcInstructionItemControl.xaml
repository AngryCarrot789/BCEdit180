<UserControl x:Class="BCEdit180.CodeEditing.Bytecode.ListControls.LdcInstructionItemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BCEdit180.CodeEditing.Bytecode.ListControls"
             mc:Ignorable="d" 
             xmlns:instructions="clr-namespace:BCEdit180.Core.CodeEditing.Bytecode.Instructions;assembly=BCEdit180.Core"
             d:DataContext="{d:DesignInstance Type=instructions:LdcInstructionViewModel}"
             d:DesignHeight="24" d:DesignWidth="400"
             ContextMenu="{StaticResource BytecodeEditorItemContextMenu}">
    <StackPanel Orientation="Horizontal">
        <TextBlock Text="{Binding Opcode, UpdateSourceTrigger=PropertyChanged}" MouseDown="TextBlock_MouseDown" Padding="0 0 5 0" VerticalAlignment="Center"/>
        <TextBlock Text="{Binding Value, UpdateSourceTrigger=PropertyChanged}" MouseDown="TextBlock_MouseDown_1" Padding="0 0 0 0" VerticalAlignment="Center"/>
    </StackPanel>
</UserControl>