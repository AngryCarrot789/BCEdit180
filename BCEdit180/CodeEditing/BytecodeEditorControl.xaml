<UserControl x:Class="BCEdit180.CodeEditing.BytecodeEditorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BCEdit180.CodeEditing" 
             xmlns:vm="clr-namespace:BCEdit180.CodeEditing.Bytecode" xmlns:controls="clr-namespace:BCEdit180.CodeEditing.Bytecode.Controls"
             d:DataContext="{d:DesignInstance Type=local:BytecodeEditorViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ListBox ItemsSource="{Binding Instructions}">
            <ListBox.Resources>
                <DataTemplate DataType="{x:Type vm:BaseInstructionViewModel}">
                    <TextBlock Text="{Binding Instruction, UpdateSourceTrigger=PropertyChanged}"/>
                </DataTemplate>
                <DataTemplate DataType="{x:Type vm:VariableInstructionViewModel}">
                    <controls:VariableInstructionControl DataContext="{Binding}"/>
                </DataTemplate>
            </ListBox.Resources>
        </ListBox>
    </Grid>
</UserControl>
